{{>layouts/header}}

{{#movieEntity}}
<div class="card mb-3" style="max-width: 540px;">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="{{imgUrl}}" alt="moviePoster">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                <p class="card-text">{{content}}</p>
                <hr>
                <p class="card-text"><small class="text-muted">감독: {{director}}</small></p>
                <p class="card-text"><small class="text-muted">주연: {{actor}}</small></p>
                <p class="card-text"><small class="text-muted">상영시간: {{movieTime}}</small></p>
                <p class="card-text"><small class="text-muted">영화등급: {{grade}}</small></p>

            </div>
        </div>
    </div>
</div>
{{/movieEntity}}

{{>layouts/footer}}